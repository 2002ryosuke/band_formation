<h1>イベントに参加</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<%= form_with(url: user_events_join_url(@user), method: :post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :random_number, "イベント番号を入力してください:" %>
    <%= form.text_field :random_number, class: "form-control", value: @random_number %>
  </div>

  <%= form.submit "参加", class: "btn btn-primary" %>
<% end %>