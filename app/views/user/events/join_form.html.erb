<%= stylesheet_link_tag 'join_form', media: 'all', 'data-turbo-track': 'reload' %>

<h1 class="event-join-title">イベントに参加</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="event-join-container">
  <%= form_with(url: user_events_join_url(@user), method: :post, local: true, class: "event-join-form") do |form| %>
    <div class="form-group">
      <%= form.label :random_number, "イベントIDを入力してください:", class: "form-label" %>
      <%= form.text_field :random_number, class: "form-control", placeholder: "例: 123456", value: @random_number %>
    </div>

    <div class="form-actions">
      <%= form.submit "参加", class: "btn btn-primary btn-submit" %>
    </div>
  <% end %>
</div>
